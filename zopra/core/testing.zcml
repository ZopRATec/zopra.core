<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="zopra">

    <include file="configure.zcml" />

    <genericsetup:registerProfile
        name="test"
        title="zopra.core tests"
        directory="profiles/test"
        description="Steps for zopra.core tests"
        provides="Products.GenericSetup.interfaces.EXTENSION"
        />

    <genericsetup:importStep
        name            = "zopra.core-install-testcontent"
        title           = "zopra.core: install test content"
        description     = "This import step uses the setuphandlers to install a ZopRA environment in Plone"
        handler         = ".setuphandlers.setupTestSzenario" />

</configure>

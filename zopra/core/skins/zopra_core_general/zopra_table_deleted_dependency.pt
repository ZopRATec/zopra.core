<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="zopra">

<body>
    <tal:comment tal:replace="nothing">

    </tal:comment>

      <metal:javascriptslot fill-slot="javascript_head_slot">

      </metal:javascriptslot>

      <metal:main fill-slot="main"
                  tal:define="table request/table;
                              isAnon context/@@plone_portal_state/anonymous;">
            <tal:block tal:condition="isAnon">
                  <tal:block replace="context/raiseUnauthorized"></tal:block>
            </tal:block>
            <tal:block tal:define="tobj python: here.tableHandler[table]">

                <h1 i18n:translate="zopra_delete_heading">
                    Deletion of
                    <span i18n:name="table" i18n:translate="" tal:content="python: tobj.getLabel()"></span>
                </h1>

                <p i18n:translate="zopra_deleted_dependency_message">
                      The dependent entry
                      <span i18n:name="table" i18n:translate="" tal:content="python: tobj.getLabel()"></span>
                      has been deleted.
                </p>
                <p i18n:translate="zopra_deleted_dependency_hint">Close this window to update the display of the main entry.</p>

                <div class="formControlsZopRA">
                    <input class="standalone"
                           onclick="top.close()"
                           type="button"
                           name="form.button.Close"
                           value="Close"
                           i18n:attributes="value"
                           i18n:domain="zopra"
                    />
                </div>
            </tal:block>
      </metal:main>

</body>
</html>
